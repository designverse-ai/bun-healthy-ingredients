{
  "name": "@designverse-ai/bun-healthy-ingredients",
  "description": " Vulnerability Scanner for Bun, so that you can cook with healthy ingredients!",
  "version": "1.0.5",
  "author": "Designverse",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/designverse-ai/bun-healthy-ingredients"
  },
  "keywords": [
    "bun",
    "security",
    "provider",
    "scanner",
    "audit",
    "bun-security",
    "bun-security-scanner",
    "vulnerability-scanner",
    "bun-scanner",
    "security-scanner",
    "npm-scanner",
    "npm-security-scanner",
    "npm-vulnerability-scanner",
    "npm-scanner",
    "npm-security-scanner",
    "npm-vulnerability-scanner",
    "bun-audit",
    "ghsa",
    "security-advisories",
    "global-security-advisories"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.1",
    "bun": "^1.3.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@octokit/core": "^7.0.5",
    "@octokit/plugin-paginate-rest": "^13.2.1",
    "zod": "^4.1.12"
  },
  "prettier": {
    "arrowParens": "always",
    "useTabs": false,
    "semi": false,
    "singleAttributePerLine": true,
    "trailingComma": "all",
    "jsxSingleQuote": false,
    "tabWidth": 2,
    "endOfLine": "lf"
  },
  "scripts": {
    "format:check": "prettier --cache -c './**/*.{js,jsx,mjs,cjs,ts,tsx,vue}' --ignore-path .gitignore",
    "format": "prettier --cache -l -w './**/*.{js,jsx,mjs,cjs,ts,tsx,vue}' --ignore-path .gitignore"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        1000
      ],
      "header-max-length": [
        2,
        "always",
        1000
      ]
    }
  }
}
